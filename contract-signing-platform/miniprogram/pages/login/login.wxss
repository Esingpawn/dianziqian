/* pages/login/login.wxss */
.login-container {
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

.logo-container {
  display: flex;
  justify-content: center;
  margin-bottom: 80rpx;
  margin-top: 60rpx;
}

.logo {
  width: 200rpx;
  height: 200rpx;
}

.login-form {
  width: 100%;
}

.btn-wechat {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #07C160;
  color: #ffffff;
  padding: 24rpx 0;
  border-radius: 8rpx;
  font-size: 32rpx;
  margin-bottom: 40rpx;
}

.wechat-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.divider-container {
  display: flex;
  align-items: center;
  margin: 40rpx 0;
}

.divider-line {
  flex: 1;
  height: 1rpx;
  background-color: #e5e5e5;
}

.divider-text {
  padding: 0 20rpx;
  color: #999999;
  font-size: 28rpx;
}

.input-group {
  margin-bottom: 30rpx;
}

.input {
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
}

.verification-code {
  display: flex;
  align-items: center;
}

.verification-code .input {
  flex: 1;
  margin-right: 20rpx;
}

.btn-code {
  width: 200rpx;
  background-color: #ffffff;
  color: var(--primary-color);
  border: 1rpx solid var(--primary-color);
  border-radius: 8rpx;
  padding: 0;
  font-size: 26rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.btn-code.disabled {
  color: #999999;
  border-color: #e5e5e5;
}

.btn-login {
  background-color: var(--primary-color);
  color: #ffffff;
  border-radius: 8rpx;
  padding: 24rpx 0;
  font-size: 32rpx;
  margin-top: 40rpx;
}

.agreement {
  margin-top: auto;
  text-align: center;
  font-size: 24rpx;
  color: #999999;
  padding: 40rpx 0;
}

.agreement-link {
  color: var(--primary-color);
}
