/* pages/contracts/detail/detail.wxss */
.container {
  padding: 30rpx;
}

.contract-header {
  margin-bottom: 30rpx;
}

.contract-title {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.contract-title text:first-child {
  font-size: 36rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.badge {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.badge-primary {
  background-color: rgba(52, 120, 246, 0.1);
  color: var(--primary-color);
}

.badge-warning {
  background-color: rgba(250, 173, 20, 0.1);
  color: var(--warning-color);
}

.badge-success {
  background-color: rgba(82, 196, 26, 0.1);
  color: var(--success-color);
}

.badge-danger {
  background-color: rgba(255, 77, 79, 0.1);
  color: var(--danger-color);
}

.contract-info-card {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.info-item {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.info-item:last-child {
  border-bottom: none;
}

.label {
  color: var(--text-color-secondary);
  font-size: 28rpx;
}

.value {
  font-size: 28rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin: 40rpx 0 20rpx;
}

.signing-process {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.process-item {
  display: flex;
  margin-bottom: 30rpx;
  position: relative;
}

.process-item:last-child {
  margin-bottom: 0;
}

.process-icon {
  width: 48rpx;
  height: 48rpx;
  background-color: var(--primary-color);
  color: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  margin-right: 20rpx;
  z-index: 2;
}

.process-line {
  position: absolute;
  left: 24rpx;
  top: 48rpx;
  width: 2rpx;
  height: calc(100% - 24rpx);
  background-color: #e0e0e0;
  z-index: 1;
}

.process-line.completed {
  background-color: var(--primary-color);
}

.process-content {
  flex: 1;
}

.process-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.signer-info {
  display: flex;
  align-items: center;
  background-color: #f9f9f9;
  padding: 16rpx;
  border-radius: 8rpx;
}

.signer-avatar {
  width: 64rpx;
  height: 64rpx;
  background-color: #e0e0e0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-right: 16rpx;
}

.signer-details {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.signer-details text:first-child {
  font-size: 28rpx;
  margin-bottom: 6rpx;
}

.sign-time {
  font-size: 24rpx;
  color: var(--text-color-secondary);
}

.sign-status {
  font-size: 24rpx;
  color: var(--warning-color);
}

.sign-status.completed {
  color: var(--success-color);
}

.contract-file {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.file-icon {
  width: 80rpx;
  height: 100rpx;
  background-color: rgba(255, 77, 79, 0.1);
  color: var(--danger-color);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.file-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.file-name {
  font-size: 28rpx;
  margin-bottom: 6rpx;
}

.file-size {
  font-size: 24rpx;
  color: var(--text-color-secondary);
}

.file-actions {
  display: flex;
}

.btn-file {
  background-color: #ffffff;
  color: var(--primary-color);
  border: 1rpx solid var(--primary-color);
  font-size: 24rpx;
  padding: 8rpx 24rpx;
  border-radius: 6rpx;
  margin-left: 16rpx;
  line-height: 1.5;
  min-height: auto;
}

.contract-actions {
  margin-top: 40rpx;
}

.btn-sign {
  background-color: var(--primary-color);
  color: #ffffff;
  width: 100%;
  padding: 24rpx 0;
  font-size: 32rpx;
  border-radius: 8rpx;
}

.btn-detail {
  background-color: #ffffff;
  color: var(--primary-color);
  border: 1rpx solid var(--primary-color);
  width: 100%;
  padding: 24rpx 0;
  font-size: 32rpx;
  border-radius: 8rpx;
}
