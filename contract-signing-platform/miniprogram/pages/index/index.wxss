/* pages/index/index.wxss */
.container {
  padding: 30rpx;
}

.user-info-card {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #e0e0e0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #999999;
  margin-right: 20rpx;
  overflow: hidden;
}

.avatar image {
  width: 100%;
  height: 100%;
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.user-status {
  font-size: 24rpx;
  color: #999999;
  display: flex;
  align-items: center;
}

.verified {
  color: var(--success-color);
}

.unverified {
  color: var(--warning-color);
}

.verify-now {
  color: var(--primary-color);
  margin-left: 20rpx;
}

.user-type-switch {
  display: flex;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  overflow: hidden;
}

.user-type-switch view {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666666;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-type-switch view.active {
  background-color: #ffffff;
  color: var(--primary-color);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.user-type-switch .count {
  font-size: 36rpx;
  font-weight: bold;
  margin-top: 10rpx;
  color: var(--primary-color);
}

.quick-actions {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
}

.enterprise-icon {
  background-image: url('data:image/svg+xml;base64,');
}

.seal-icon {
  background-image: url('data:image/svg+xml;base64,');
}

.contract-icon {
  background-image: url('data:image/svg+xml;base64,');
}

.privacy-icon {
  background-image: url('data:image/svg+xml;base64,');
}

.settings-icon {
  background-image: url('data:image/svg+xml;base64,');
}

.action-item text {
  font-size: 24rpx;
  color: #666666;
}

.create-contract-btn {
  background-color: var(--primary-color);
  color: #ffffff;
  border-radius: 8rpx;
  padding: 24rpx 0;
  text-align: center;
  font-size: 32rpx;
}
