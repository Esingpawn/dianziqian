/* pages/enterprise/index.wxss */

.container {
  padding: 30rpx;
  padding-bottom: 120rpx;
}

/* 头部样式 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: 700;
}

.status-badge {
  padding: 10rpx 20rpx;
  border-radius: 100rpx;
  font-size: 24rpx;
}

.status-badge.unverified {
  background-color: #F5F5F5;
  color: #999;
}

.status-badge.pending {
  background-color: #FFF7E6;
  color: #F59E0B;
}

.status-badge.verified {
  background-color: #F6FFED;
  color: var(--success-color);
}

.status-badge.rejected {
  background-color: #FFF1F0;
  color: var(--error-color);
}

/* 认证说明卡片 */
.info-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.info-title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.info-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.info-item {
  display: flex;
  align-items: center;
}

.info-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 16rpx;
  background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="%233B82F6" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>');
  background-size: cover;
  flex-shrink: 0;
}

/* 表单卡片 */
.form-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.form-title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 30rpx;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-label {
  font-size: 28rpx;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 88rpx;
  border: 2rpx solid #eeeeee;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.license-upload {
  width: 100%;
  height: 300rpx;
  border: 2rpx dashed #cccccc;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f9f9f9;
  position: relative;
}

.upload-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
  background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="%23999999" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path><polyline points="17 8 12 3 7 8"></polyline><line x1="12" y1="3" x2="12" y2="15"></line></svg>');
  background-position: center;
  background-repeat: no-repeat;
  background-size: contain;
}

.upload-text {
  font-size: 28rpx;
  color: #999;
}

.license-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.reupload-text {
  position: absolute;
  bottom: 16rpx;
  font-size: 24rpx;
  color: #666;
  background-color: rgba(255, 255, 255, 0.8);
  padding: 8rpx 16rpx;
  border-radius: 4rpx;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background-color: var(--primary-color);
  color: #ffffff;
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 8rpx;
  margin-top: 40rpx;
}

/* 状态卡片 */
.status-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.status-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 24rpx;
  background-position: center;
  background-repeat: no-repeat;
  background-size: 60rpx;
}

.status-icon.pending {
  background-color: rgba(245, 158, 11, 0.1);
  background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="%23F59E0B" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><polyline points="12 6 12 12 16 14"></polyline></svg>');
}

.status-icon.verified {
  background-color: rgba(16, 185, 129, 0.1);
  background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="%2310B981" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg>');
}

.status-icon.rejected {
  background-color: rgba(239, 68, 68, 0.1);
  background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="%23EF4444" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><line x1="15" y1="9" x2="9" y2="15"></line><line x1="9" y1="9" x2="15" y2="15"></line></svg>');
}

.status-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.status-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  text-align: center;
}

.status-tip {
  font-size: 24rpx;
  color: #999;
  text-align: center;
}

.reject-reason {
  width: 100%;
  padding: 24rpx;
  background-color: #FFF1F0;
  color: var(--error-color);
  font-size: 28rpx;
  border-radius: 8rpx;
  margin: 20rpx 0 30rpx;
}

.resubmit-btn {
  width: 100%;
  height: 88rpx;
  background-color: var(--primary-color);
  color: #ffffff;
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 8rpx;
}

/* 信息列表 */
.info-list {
  width: 100%;
  margin-top: 30rpx;
  border-top: 2rpx solid #f5f5f5;
  padding-top: 30rpx;
}

.info-row {
  display: flex;
  padding: 16rpx 0;
  border-bottom: 2rpx solid #f5f5f5;
}

.info-label {
  width: 180rpx;
  font-size: 28rpx;
  color: #666;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
}

/* 未登录提示 */
.login-prompt {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  background-color: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10rpx);
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 99;
}

.login-prompt-text {
  font-size: 28rpx;
  color: #666;
}

.login-prompt-button {
  padding: 16rpx 30rpx;
  background-color: var(--primary-color);
  color: #ffffff;
  font-size: 28rpx;
  border-radius: 8rpx;
} 