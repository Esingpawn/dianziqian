/* pages/auth/login/index.wxss */

.container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  padding: 40rpx;
  background-color: #f5f5f5;
}

.login-card {
  width: 100%;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.logo {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  color: var(--primary-color);
}

.subtitle {
  font-size: 26rpx;
  color: #666;
}

/* 登录选项卡 */
.login-tabs {
  display: flex;
  border-bottom: 2rpx solid #eeeeee;
  margin-bottom: 40rpx;
}

.tab {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  padding: 20rpx 0;
  position: relative;
}

.tab.active {
  color: var(--primary-color);
  font-weight: 500;
}

.tab.active::after {
  content: "";
  position: absolute;
  bottom: -2rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: var(--primary-color);
  border-radius: 2rpx;
}

/* 手机号登录表单 */
.login-form {
  margin-bottom: 30rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.input-container {
  position: relative;
  border: 2rpx solid #eeeeee;
  border-radius: 8rpx;
  overflow: hidden;
}

.form-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
}

.verification-code {
  display: flex;
}

.verification-code .form-input {
  flex: 1;
}

.code-btn {
  min-width: 200rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  color: var(--primary-color);
  background-color: transparent;
  border-left: 2rpx solid #eeeeee;
  border-radius: 0;
  padding: 0 24rpx;
}

.code-btn.disabled {
  color: #999;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: var(--primary-color);
  color: #ffffff;
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 8rpx;
  margin-top: 20rpx;
}

/* 微信登录 */
.wechat-login {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.wechat-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #07c160;
  color: #ffffff;
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.wechat-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
  background-color: white;
  border-radius: 50%;
}

.wechat-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
}

/* 注册提示 */
.register-tip {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-top: 30rpx;
}

.register-link {
  color: var(--primary-color);
} 