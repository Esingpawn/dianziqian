/* pages/auth/register/index.wxss */

.container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  padding: 40rpx;
  background-color: #f5f5f5;
}

.register-card {
  width: 100%;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  text-align: center;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 40rpx;
}

/* 表单样式 */
.form {
  margin-bottom: 30rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input-container {
  position: relative;
  border: 2rpx solid #eeeeee;
  border-radius: 8rpx;
  overflow: hidden;
}

.form-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
}

.verification-code {
  display: flex;
}

.verification-code .form-input {
  flex: 1;
}

.code-btn {
  min-width: 200rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  color: var(--primary-color);
  background-color: transparent;
  border-left: 2rpx solid #eeeeee;
  border-radius: 0;
  padding: 0 24rpx;
}

.code-btn.disabled {
  color: #999;
}

/* 隐私协议勾选 */
.privacy-check {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 8rpx 0;
}

.checkbox {
  width: 36rpx;
  height: 36rpx;
  border: 2rpx solid #cccccc;
  border-radius: 4rpx;
  margin-right: 16rpx;
  position: relative;
}

.checkbox.checked {
  background-color: var(--primary-color);
  border-color: var(--primary-color);
}

.checkbox.checked::after {
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 20rpx;
  height: 12rpx;
  border-left: 4rpx solid #ffffff;
  border-bottom: 4rpx solid #ffffff;
  transform: translate(-50%, -60%) rotate(-45deg);
}

.privacy-text {
  font-size: 26rpx;
  color: #666;
  flex: 1;
}

.link {
  color: var(--primary-color);
}

.register-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: var(--primary-color);
  color: #ffffff;
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 8rpx;
  margin-top: 20rpx;
}

/* 登录提示 */
.login-tip {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-top: 30rpx;
}

.login-link {
  color: var(--primary-color);
} 